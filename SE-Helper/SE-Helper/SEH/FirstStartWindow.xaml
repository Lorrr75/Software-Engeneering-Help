<Window x:Class="SEH.FirstStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEH"
        mc:Ignorable="d"
        Title="FirstStartWindow" Height="335" Width="450">
    <StackPanel>
        <TextBlock Margin="15" FontSize="28" FontWeight="Bold" FontFamily="Georgia" HorizontalAlignment="Center">
            Software Engenering Helper</TextBlock>
        <Button Margin="15" Height="50" FontSize="28" FontFamily="Georgia" >
            Nuovo Progetto</Button>
        <Button Margin="15" Height="50" FontSize="28" FontFamily="Georgia" >
            Apri Progetto Esistente</Button>
        <Button Margin="15" Height="50" FontSize="28" FontFamily="Georgia" Click="Exit_Click">
            Esci</Button>
    </StackPanel>
</Window>
